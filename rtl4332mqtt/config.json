{
  "name": "RTLMQTT to Home Assistant",
  "version": "0.1.1",
  "slug": "rtl433mqtt2hasio",
  "description": "RTL Sensors to Home Assistant via MQTT with Autodiscovery",
  "url": "https://github.com/Zipsnet/hassio_addons",

  "startup": "services",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "usb": true,
  "options":
    {
    "mqtt_host": "192.168.1.1115",
    "mqtt_port": 1883,
    "mqtt_user": "user",
    "mqtt_password": "pass",
    "mqtt_topic": "rtl_433",
    "mqtt_retain" : "true",
    "discovery_prefix": "homeassistant",
    "discovery_interval": 600,
    "debug": "false"
  },
  "schema":
    {
    "mqtt_host": "str",
    "mqtt_port": "int",
    "mqtt_user": "str",
    "mqtt_password": "str",
    "mqtt_topic": "str",
    "mqtt_retain" : "str",
    "discovery_prefix": "str",
    "discovery_interval": "int",
    "debug": "bool"
   }
}

